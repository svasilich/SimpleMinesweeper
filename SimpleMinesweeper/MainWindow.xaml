<Window x:Class="SimpleMinesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleMinesweeper"
        xmlns:views="clr-namespace:SimpleMinesweeper.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="Игра" Command="{Binding MenuCommand}">
            </MenuItem>
            <MenuItem Header="О программе"></MenuItem>
        </Menu>
        <views:MineFieldView Grid.Row="1" x:Name="MainView">
        </views:MineFieldView>
    </Grid>
</Window>
