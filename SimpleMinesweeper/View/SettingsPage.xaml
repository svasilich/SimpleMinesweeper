<view:MinesweeperPage x:Class="SimpleMinesweeper.View.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SimpleMinesweeper.View"
      xmlns:settings="clr-namespace:SimpleMinesweeper.Core.GameSettings"
      xmlns:view="clr-namespace:SimpleMinesweeper.View"
      mc:Ignorable="d"
      Title="SettingsPage">

    <StackPanel Orientation="Vertical">
        <TextBlock FontSize="24" TextAlignment="Center">Настройки игры</TextBlock>
        <Button MinHeight="50" MinWidth="150" Margin="50, 20" Command="{Binding MenuSetGameTypeCommand}" CommandParameter="{x:Static settings:GameType.Newbie}">Новичок</Button>
        <Button MinHeight="50" MinWidth="150" Margin="50, 20" Command="{Binding MenuSetGameTypeCommand}" CommandParameter="{x:Static settings:GameType.Advanced}">Любитель</Button>
        <Button MinHeight="50" MinWidth="150" Margin="50, 20, 50, 30" Command="{Binding MenuSetGameTypeCommand}" CommandParameter="{x:Static settings:GameType.Professional}">Профессионал</Button>
    </StackPanel>
</view:MinesweeperPage>
