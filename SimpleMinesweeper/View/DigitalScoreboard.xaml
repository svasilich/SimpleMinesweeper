<UserControl x:Class="SimpleMinesweeper.View.DigitalScoreboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleMinesweeper.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Control.Resources>
        <FontFamily x:Key="MonoDigital">.\..\Fonts\#Digital-7 Mono</FontFamily>
    </Control.Resources>
    
    <Border Grid.Column="0" Grid.Row="0"
            Name="ScoreBorder"
                    BorderThickness="3"
                    BorderBrush="DarkCyan"
                    CornerRadius="8"
                    Background="Black">
        <Viewbox Margin="3">
            <TextBlock Name="ContentTextBlock"
                       FontFamily="{StaticResource MonoDigital}"
                       Foreground="GreenYellow"
                       />
        </Viewbox>
    </Border>
</UserControl>
